<Window x:Class="FileFinderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="File Finder" Height="650" Width="900">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBox Width="300" Text="{Binding RootDirectory, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Browse" Margin="5,0" Command="{Binding BrowseCommand}" />
            <TextBox Width="150" Text="{Binding SearchPattern, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Search" Margin="5,0" Command="{Binding SearchCommand}" />
            <Button Content="Cancel" Margin="5,0" Command="{Binding CancelCommand}" />
        </StackPanel>
        <ProgressBar Height="20" Minimum="0" Maximum="100" Value="{Binding Progress}" />
        <DataGrid ItemsSource="{Binding FoundFiles}" AutoGenerateColumns="False" Margin="0,10,0,10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Extension" Binding="{Binding Extension}" Width="100"/>
                <DataGridTextColumn Header="Full Path" Binding="{Binding FullPath}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <CheckBox Content="Preserve Folder Structure" IsChecked="{Binding PreserveStructure}" Margin="0,0,10,0"/>
            <Button Content="Copy" Command="{Binding CopyCommand}" Margin="5,0"/>
            <Button Content="Move" Command="{Binding MoveCommand}" Margin="5,0"/>
        </StackPanel>
    </DockPanel>
</Window>